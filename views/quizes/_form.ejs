<label form="preg" class="rem">Pregunta:</label>
<input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta  %>"/>
<p>
  <label form="resp" class="rem">Respuesta:</label>
  <input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>"/> 
</p>
<p>
  <label form="resp" class="rem">Tema:</label>
  <select name="quiz[tema]">
    <option value="Otro" <% if(quiz.tema=='Otro'){ %>selected<% } %>>Otro</option>
    <option value="Geografía" <% if(quiz.tema=='Geografía'){ %>selected<% } %>>Geografía</option>
    <option value="Deportes" <% if(quiz.tema=='Deportes'){ %>selected<% } %>>Deportes</option>
    <option value="Humanidades" <% if(quiz.tema=='Humanidades'){ %>selected<% } %>>Humanidades</option>
    <option value="Ocio" <% if(quiz.tema=='Ocio'){ %>selected<% } %>>Ocio</option>
    <option value="Ciencia" <% if(quiz.tema=='Ciencia'){ %>selected<% } %>>Ciencia</option>
    <option value="Tecnología" <% if(quiz.tema=='Tecnología'){ %>selected<% } %>>Tecnología</option>
  </select>
</p>
<p>
  <a href="/quizes"><button type="button">Cancelar</button></a>
  <input type="submit" value="Guardar" />
</p>
